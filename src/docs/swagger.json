{
  "openapi": "3.0.0",
  "info": {
    "title": "Scraps API",
    "version": "1.0.0",
    "description": "A social network featuring a message functionality inspired in Orkut's scraps funcionality"
  },
  "servers": [
    {
      "name": "Development",
      "url": "http://localhost:3333"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "description": "Login endpoint",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user": {
                    "type": "string",
                    "example": "user",
                    "description": "user's username or email"
                  },
                  "password": {
                    "type": "string",
                    "example": "Password123"
                  }
                }            
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": { 
                "schema": {
                  "type": "object",
                  "properties": {
                    "auth": {
                      "type": "boolean",
                      "example": true
                    },
                    "accessToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..zVaJSINSviiISqjNCeJcPvNT5lpHnruOVEfpbtM_VD8",
                      "description": "JWT auth token" 
                    }, 
                    "refreshToken": {
                      "type": "string",
                      "example": "c2450d44-9f65-447d-b952-194d62ecdcd9",
                      "description": "uuid refresh token"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Failure",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string",
                            "example": "Incorrect password"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout/{refreshToken}": {
      "delete": {
        "description": "Deletes a refresh token from the database",
        "tags": [
          "Auth"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "refreshToken"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string",
                            "example": "Missing authentication token"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "auth_token": [
              "write:users"
            ]
          }
        ] 

      }
    },
    "/auth/refresh": {
      "post": {
        "description": "Generates a new valid JWT auth token through the refresh token",
        "tags": [
          "Auth"
        ],
        "requestBody":{
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "example": "8c51b5be-386e-4c55-a4c1-725239e030fb", 
                    "description": "A valid refresh token"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": { 
                "schema": {
                  "type": "object",
                  "properties": {
                    "auth": {
                      "type": "boolean",
                      "example": true
                    },
                    "accessToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..zVaJSINSviiISqjNCeJcPvNT5lpHnruOVEfpbtM_VD8",
                      "description": "JWT auth token" 
                    }, 
                    "refreshToken": {
                      "type": "string",
                      "example": "c2450d44-9f65-447d-b952-194d62ecdcd9",
                      "description": "uuid refresh token"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Failure",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string",
                            "example": "Refresh Token Invalid"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "description": "Creates a new User",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "user"
                  },
                  "email": {
                    "type": "string",
                    "example": "user@email.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "Password123",
                    "description": "Must be at least 8 caracters long, at least one uppercase and one number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "sucessfully created new user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string",
                            "example": "username is already taken"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "description": "Returns a list of users",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "description": "maximum number of results wanted",
            "example": "10"
          },
          {
            "in": "query",
            "name": "page",
            "description": "page skip value",
            "example": "1"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total": {
                      "type": "number",
                      "description": "total count of objects in the database",
                      "example": 1
                    },
                    "results": {
                      "type": "array",
                      "description": "list of users",
                      "items": {
                        "type": "object",
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{username}": {
      "get": {
        "description": "returns a user by its username",
        "tags": [
          "Users"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "username",
            "example": "user",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Failure",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string",
                            "example": "username not found"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/change-password": {
      "patch": {
        "description": "Changes a user's password",
        "tags": [
          "Users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "oldPassword": {
                    "type": "string"
                  },
                  "newPassword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "password changed"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "message": {
                            "type": "string",
                            "example": "current password is invalid"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "auth_token": [
              "write:users"
            ]
          }
        ] 
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "b539159b-eb87-45dd-aff4-3ac649305ce6"
          },
          "username": {
            "type": "string",
            "example": "user"
          },
          "created_at": {
            "type": "string",
            "example": "2022-04-11T13:56:04.000Z"
          },
          "profile": {
            "type": "object",
            "$ref": "#/components/schemas/Profile"
          },
          "scraps_received": {
            "type": "number",
            "example": 0
          },
          "scraps_sent": {
            "type": "number",
            "example": 0
          },
          "followers": {
            "type": "number",
            "example": 0
          },
          "follows": {
            "type": "number",
            "example": 0
          }
        }
      }
    },
    "securitySchemes": {
      "auth_token": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}

